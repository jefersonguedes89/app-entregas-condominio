<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThemeStylesIcons" parent="Theme.Material3.Dark">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/cinza_escuro</item>
        <item name="colorPrimaryVariant">@color/preto</item>
        <item name="colorOnPrimary">@color/preto</item>


        <item name="android:textColorLink">@color/amarelo</item>


    </style>


    <style name="SpinnerDatePickerDialogTheme" parent="Theme.Material3.Dark">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <!-- Força modo spinner -->
        <item name="android:datePickerMode">spinner</item>
        <!-- Esconde o calendário, mostra só o spinner -->
        <item name="android:calendarViewShown">false</item>
    </style>

    <color name="corSelecionada">@color/cinza_transparente</color>
</resources>